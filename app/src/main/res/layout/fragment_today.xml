<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
>


            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/bannerViewpager"
                android:layout_height="0dp"
                android:layout_width="0dp"
                app:layout_constraintDimensionRatio="626:418"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/totalBanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="3"
                android:textColor="@color/black"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@id/bannerViewpager"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/slash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/totalBanner"
                android:layout_marginEnd="5dp"
                android:text="/"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/totalBanner"/>

            <TextView
                android:id="@+id/currentBanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/slash"
                android:layout_marginEnd="1dp"
                android:text="1"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/totalBanner" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이 상품 구독 어때요?"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/bannerViewpager"
                android:layout_marginTop="18sp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/productRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/text1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text1"
                tools:itemCount="1"
                android:layout_marginStart="16dp"
                android:adjustViewBounds="true"
                tools:listitem="@layout/item_product"
                android:layout_marginTop="10dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:layout_constraintTop_toBottomOf="@id/productRecyclerView"/>




        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
