<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            app:elevation="0dp"
            android:layout_height="530dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="480dp"
                app:contentScrim="@color/white"
                android:background="@color/white"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/productImg"
                    android:layout_width="match_parent"
                    android:layout_height="355dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher"
                    app:layout_collapseMode="parallax" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:background="@color/white"
                    android:paddingHorizontal="24dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="@color/mediumGray"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"
                        android:text="샛별배송" />

                    <TextView
                        android:id="@+id/productName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/txt1"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="@color/darkGray"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:text="상품명" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/productName2"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="@color/darkGray"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:text="2000" />

                    <TextView
                        android:id="@+id/priceWon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/price"
                        app:layout_constraintTop_toTopOf="@id/price"
                        app:layout_constraintBottom_toBottomOf="@id/price"
                        android:textColor="@color/darkGray"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="10dp"
                        android:text="원" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/detailToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin" >

                    <ImageView
                        android:id="@+id/backBtn"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="start"
                        android:padding="10dp"
                        android:src="@drawable/ic_arrow"
                        app:tint="@color/mediumGray" />

                    <TextView
                        android:id="@+id/productName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상품이름"
                        android:layout_marginLeft="10dp"

                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="5dp">

                        <ImageView
                            android:id="@+id/bagBtn"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="14dp"
                            android:src="@drawable/ic_cart" />

                        <TextView
                            android:id="@+id/cartCnt"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_gravity="end"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:text="1"
                            android:textSize="9sp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="@drawable/oval_primary" />

                    </FrameLayout>


                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/productDetailTabLayout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:tabGravity="fill"
                app:tabMode="fixed" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/productDetailViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
